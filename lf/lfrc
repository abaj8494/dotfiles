cmd zip %zip -r "$f" "$f"
cmd tar %tar cvf "$f.tar" "$f"

cmd wall /usr/local/bin/wallpaper set "$f"

cmd mkdir ${{
	printf "Directory name: "
	read ans
	mkdir "$ans"
}}

cmd yank-path $printf '%s' "$fx" | pbcopy
