set previewer stpv
set cleaner stpvimgclr
&stpvimg --listen $id
cmd on-quit $stpvimg --end $id

set preview true
set hidden true

# from default rc
#set shell sh
#set shellopts '-eu'
#set ifs "\n"

set icons
#set dircounts
map ff $lf -remote "send $id select \"$(fzf)\""
map s- &tmux split-window -h lf
map sv &tmux split-window -v lf

cmd zip ${{
	zip -r "$f".zip "$f"
}}
cmd tar %tar cvf "$f.tar" "$f"
cmd unzip ${{
	unzip "$f"
}}

cmd wall ${{
	wallpaper set "$f"
}}

cmd mkdir ${{
	printf "Directory name: "
	read ans
	mkdir "$ans"
}}


cmd trash ${{
   mkdir -p ~/.trash
   if [ -z "$fs" ]; then
	   mv "$f" ~/.trash
   else
	   IFS="`printf '\n\t'`"; mv $fs ~/.trash
   fi
}}


cmd yank-path $printf '%s' "$fx" | pbcopy
# the below 2 do not work as the head command on osx cannot handle negative
# values. you will need to use some text manipulation trickery with tail / sed 
# / awk to get this to work. nffs.
